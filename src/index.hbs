<!doctype html>
<html lang="es">
<head>
    <title>Product UI/UX</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>        
        #mainImage > a:hover {
            cursor: url('./static/img/plus-zoom.png'), default;  
        }
    </style>
</head>

<body class="product">
    <!-- MAIN -->
    <main id="mainContent">

        <!-- STRUCTURE STARTS -->
        <section id="pdp" class="container position-relative pb-5">
            
            <!-- PRODUCT PROMOS -->
            <article id="cBanner" class="row sticky-lg-top py-2">
                {{> partials/_CommercialBanner }}
            </article>

            <!-- MAIN PRODUCT -->
            <article id="productMain" class="row mb-3">
                {{> partials/_Product }}
            </article>

            <!-- SUGESTIONS -->
            <article id="lastSeen" class="row bg-light-vc mb-3">
                {{> partials/_Sugestions }}
            </article>

            <!-- MORE FEATURES -->
            <article id="moreFeatures" class="row">
                <div class="col-12 col-lg-9">
                    <!-- DESCRIPTION -->
                    <section id="descriptionPdp" class="row">
                        {{> partials/_Description }}
                    </section>

                    <!-- REVIEWS -->
                    <section id="reviewsPdp" class="row">
                        {{> partials/_Reviews }}
                    </section>

                    <!-- CARE INSTRUCTIONS -->
                    <section id="careInstructionsPdp" class="row">
                        {{> partials/_CareInstructions }}
                    </section>

                    <!-- SIZE REVIEWS  -->
                    <section id="sizesReviewsPdp" class="row">
                        {{> partials/_SizeReviews }}
                    </section>

                    <!-- DELIVERIES & DEVOLUTIONS  -->
                    <section id="deliveriesAndDevolutions" class="row">
                        {{> partials/_DeliveriesAndDevolutions }}
                    </section>
                </div>
                <div class="col-lg-3 d-none d-lg-flex align-items-center">
                    <picture>
                        <source srcset='https://statics.venca.com/web/img/products/112004_262073_PV_DF_TL_20230214101733_2_xm.jpg'>
                        <img src='https://statics.venca.com/web/img/products/112004_262073_PV_DF_TL_20230214101733_2_xm.webp' class='thumbnail img-fluid' />
                    </picture> 
                </div>
            </article>

            
   
        </section>
        
    </main>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
    
    <!-- CUSTOM -->
    <script type="module" src="./app.js"></script>
</body>

</html>